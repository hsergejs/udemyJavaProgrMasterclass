<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="parentGrindPane" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="pract_lesson_.JavaFXCSS.Controller" alignment="center" hgap="10" vgap="10"
          stylesheets="@css/styles.css">

    <Button text="Open file..." onAction="#handleOpenOnActionFileChooser" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="Open directory..." onAction="#handleOpenOnActionDirectoryChoose" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Button three" id="buttonThree" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button fx:id="buttonShadow" text="Button four" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

    <RadioButton text="Choice 1" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="zoomLabel" onMouseEntered="#handleMouseEnterEvent" onMouseExited="#handleMouseExitEvent"
           text="Label to Zoom" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <Label rotate="90"
           text="Label to rotate" GridPane.rowIndex="2" GridPane.columnIndex="1" />
</GridPane>
